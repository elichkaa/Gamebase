    <![endif]-->
</head>

<body>
    <!-- Header section -->
    <header class="header-section">
        <div class="container">
            <!-- logo -->
            <a class="site-logo" asp-controller="Home" asp-action="Index">
                <img src="/img/logo.png" alt="">
            </a>
            @if (this.SignInManager.IsSignedIn(this.User))
            {
            <div class="user-panel">
                Hello, @this.User.Identity.Name! / <a asp-controller="Users" asp-action="Logout">Logout</a>
            </div>
            }
            else
            {
                <div class="user-panel">
                    <a asp-controller="Users" asp-action="Login">Login</a> / <a asp-controller="Users" asp-action="Register">Register</a>
                </div>
            }

            <!-- responsive -->
            <div class="nav-switch">
                <i class="fa fa-bars"></i>
            </div>
            <!-- site menu -->
            <nav class="main-menu">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Games" asp-action="All">Games</a></li>
                    <li><a asp-controller="Home" asp-action="Categories">Blog</a></li>
                    <li><a asp-controller="Home" asp-action="Community">Forums</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- Header section end -->
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <div>
        @RenderBody()
    </div>
