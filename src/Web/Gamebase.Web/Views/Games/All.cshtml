                        </div>
                        <div class="review-text">
                            <h4>@Model[i+1].Name</h4>
                            <p>@Model[i+1].Summary</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center pt-4">
            <button class="site-btn btn-sm">Load More</button>
        </div>
    </div>
</section>
