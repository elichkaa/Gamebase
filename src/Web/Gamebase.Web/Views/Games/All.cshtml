<!-- Page section -->
<section class="page-section review-page spad">
    <div class="container">
        <div class="row">
            @for (int i = 1; i <= 10; i += 2)
            {
                <div class="col-md-6">
                    <div class="review-item">
                        <div class="review-cover set-bg" data-setbg="@BaseUrl@ScreenshotBig/@Model[i].Cover">
                            <div class="score yellow">@Model[i].AverageRating</div>
                        </div>
                        <div class="review-text">
                            <h4>@Model[i].Name</h4>
                            <p>@Model[i].Summary</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="review-item">
                        <div class="review-cover set-bg" data-setbg="@BaseUrl@ScreenshotBig/@Model[i+1].Cover">
