@using static Gamebase.Common.Constants
@model ICollection<Gamebase.Web.ViewModels.Search.SearchDeveloperViewModel>
@{
    ViewData["Title"] = "Search results";
}
@if (Model.Any())
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Games</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < @Model.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@Model.ToList()[i].Name</td>
                        <td>
                            <div class="row">
                                @foreach (var game in @Model.ToList()[i].GamesByDeveloper)
                                {
                                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                                        <div class="card" style="width: 10rem;">
                                            @if (!game.IsFromUser)
                                            {
                                                <img class="card-img-top" src="@BaseUrl@CoverBig/@game.Cover" alt="@game.Name">
                                            }
                                            else
                                            {
                                                <img class="card-img-top" src="@UserImageUrl@game.Cover" alt="@game.Name">
                                            }
                                            <div class="card-body">
                                                <h5 class="card-title">@game.Name</h5>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1>No results found.</h1>
}