@model ICollection<Gamebase.Web.ViewModels.Search.SearchGameViewModel>
@{
    ViewData["Title"] = "Search results";
}
@if (Model.Any())
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Release Date</th>
                    <th scope="col">Developer Name</th>
                    <th scope="col">Go to game</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < @Model.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@Model.ToList()[i].Name</td>
                        <td>@Model.ToList()[i].ReleaseDate</td>
                        <td>@Model.ToList()[i].DeveloperName</td>
                        <td>
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.ToList()[i].Id">
                                Go to game page
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1>No results found.</h1>
}

