@model Gamebase.Web.InputModels.UserLoginInputModel

@{
    ViewData["Title"] = "Login";
}

<section class="user-form">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div>
                    <form class="box" asp-controller="Users" asp-action="Login" method="post">
                        <h1>Login</h1>
                        <p class="text-muted">Please enter your username and password</p>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input">
                            <input type="text" placeholder="Username" asp-for="@Model.Username" class="form-control" />
                        </div>
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        <div class="input">
                            <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password" />
                        </div>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        <div class="form-group text-white">
                            <label asp-for="@Model.RememberMe">
                                <input type="checkbox" asp-for="@Model.RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        <input type="submit" name="" value="Login">
                        <div class="col-md-12">
                        </div>
                        <div>
                            <div>
                                <h3 class="text-white">Don’t Have An Account?</h3>
                                <hr />
                                <input asp-controller="Users" asp-action="Register" type="submit" name="" value="Register">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}